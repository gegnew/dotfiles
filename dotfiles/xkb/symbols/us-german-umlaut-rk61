default partial alphanumeric_keys
xkb_symbols "basic" {
	include "us(altgr-intl)"
	include "level3(caps_switch)"
	name[Group1] = "English (US, international with German umlaut)";
	key <AD03> { [ e, E, EuroSign, cent ] };
	key <AD07> { [ u, U, udiaeresis, Udiaeresis ] };
	key <AD09> { [ o, O, odiaeresis, Odiaeresis ] };
	key <AC01> { [ a, A, adiaeresis, Adiaeresis ] };
	key <AC02> { [ s, S, ssharp ] };
	key <ESC>  {[ quoteleft,    asciitilde      ]       };
	key <TLDE> {[ escape      ]       };

	// from https://superuser.com/questions/96299/mapping-superhjkl-to-arrow-keys-under-x
	//hjkl
	//AltGr + hjkl
	key <AC06> {        [         h, H, Left            ]       };
	key <AC07> {        [         j, J, Down            ]       };
	key <AC08> {        [         k, K, Up              ]       };
	key <AC09> {        [         l, L, Right           ]       };
	//Super_L -> Alt Gr
	key <LWIN> { [ ISO_Level3_Shift ] }; //see below!
};
