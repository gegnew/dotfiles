env:
  TERM: xterm-256color
  # history: '10000'

live_config_reload: true

shell:
  program: /bin/zsh
  args:
    - -l
    - -c
    - tmux attach-session -t main 2> /dev/null || tmux attach-session -t main 2> /dev/null ||  tmux new -A -s main
    # - "source ~/.zshrc && tmux attach-session -t main 2> /dev/null || tmux attach-session -t main 2> /dev/null ||  tmux new -A -s main"

# shell:
  # program: /usr/bin/zellij
  # args:
  # - options --default-shell nu

mouse:
  hide_when_typing: true

font:
  size: 13
  normal:
    family: Victor Mono
    style: Normal
  bold:
    family: Victor Mono
    style: Bold
  italic:
    family: Victor Mono
    style: Light Italic

selection:
  semantic_escape_chars: ",â”‚`|:\"' ()[]{}<>\t"
  save_to_clipboard: true

window:
  opacity: 0.5

key_bindings:
  - {key: Return, mods: Control, action: ToggleViMode}
  - {key: V, mods: Alt, action: Paste}

# TokyoNight Alacritty Colors
# https://github.com/folke/tokyonight.nvim/blob/main/extras/alacritty_tokyonight_storm.yml
colors:
  # Default colors
  primary:
    # background: '0x24283b'
    # foreground: '0xc0caf5'
    background: '0x282828'
    # soft contrast: background = '0x32302f'
    foreground: '0xebdbb2'

  # Normal colors
  normal:
    black:   '0x1d202f'
    red:     '0xf7768e'
    green:   '0x9ece6a'
    yellow:  '0xe0af68'
    blue:    '0x7aa2f7'
    magenta: '0xbb9af7'
    cyan:    '0x7dcfff'
    white:   '0xa9b1d6'

  # Bright colors
  bright:
    black:   '0x414868'
    red:     '0xf7768e'
    green:   '0x9ece6a'
    yellow:  '0xe0af68'
    blue:    '0x7aa2f7'
    magenta: '0xbb9af7'
    cyan:    '0x7dcfff'
    white:   '0xc0caf5'

  indexed_colors:
    - { index: 16, color: '0xff9e64' }
    - { index: 17, color: '0xdb4b4b' }
    
