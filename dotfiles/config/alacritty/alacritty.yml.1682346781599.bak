env:
  TERM: xterm-256color
  # history: '10000'

live_config_reload: true

shell:
  program: /bin/zsh
  args:
    - -l
    - -c
    - tmux attach-session -t main 2> /dev/null || tmux attach-session -t main 2>
      /dev/null ||  tmux new -A -s main
    # - "source ~/.zshrc && tmux attach-session -t main 2> /dev/null || tmux attach-session -t main 2> /dev/null ||  tmux new -A -s main"
  # shell:
  # program: /usr/bin/zellij
  # args:
  # - options --default-shell nu
mouse:
  hide_when_typing: true

font:
  size: 13
  normal:
    family: Victor Mono
    style: Normal
  bold:
    family: Victor Mono
    style: Bold
  italic:
    family: Victor Mono
    style: Light Italic

selection:
  semantic_escape_chars: ",â”‚`|:\"' ()[]{}<>\t"
  save_to_clipboard: true

window:
  opacity: 0.9

key_bindings:
  - { key: Return, mods: Control, action: ToggleViMode }
  - { key: V, mods: Alt, action: Paste }
colors:
  name: Atelierforest (dark)
  author: Chris Kempson
  primary:
    background: "#1b1918"
    foreground: "#a8a19f"
  cursor:
    text: "#1b1918"
    cursor: "#a8a19f"
  normal:
    black: "#1b1918"
    red: "#f22c40"
    green: "#5ab738"
    yellow: "#d5911a"
    blue: "#407ee7"
    magenta: "#6666ea"
    cyan: "#00ad9c"
    white: "#a8a19f"
  bright:
    black: "#766e6b"
    red: "#f22c40"
    green: "#5ab738"
    yellow: "#d5911a"
    blue: "#407ee7"
    magenta: "#6666ea"
    cyan: "#00ad9c"
    white: "#f1efee"
theme: Atelierforest.dark

