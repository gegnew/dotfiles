env:
  TERM: xterm-256color
  # history: '10000'

live_config_reload: true

shell:
  program: /bin/zsh
  args:
    - -l
    - -c
    - tmux attach-session -t main 2> /dev/null || tmux attach-session -t main 2>
      /dev/null ||  tmux new -A -s main
    # - "source ~/.zshrc && tmux attach-session -t main 2> /dev/null || tmux attach-session -t main 2> /dev/null ||  tmux new -A -s main"
  # shell:
  # program: /usr/bin/zellij
  # args:
  # - options --default-shell nu
mouse:
  hide_when_typing: true

font:
  size: 13
  normal:
    family: Victor Mono
    style: Normal
  bold:
    family: Victor Mono
    style: Bold
  italic:
    family: Victor Mono
    style: Light Italic

selection:
  semantic_escape_chars: ",â”‚`|:\"' ()[]{}<>\t"
  save_to_clipboard: true

window:
  opacity: 0.5

key_bindings:
  - { key: Return, mods: Control, action: ToggleViMode }
  - { key: V, mods: Alt, action: Paste }

# TokyoNight Alacritty Colors
# https://github.com/folke/tokyonight.nvim/blob/main/extras/alacritty_tokyonight_storm.yml
colors:
  name: Atelierdune (light)
  author: Chris Kempson
  primary:
    background: "#fefbec"
    foreground: "#6e6b5e"
  cursor:
    text: "#fefbec"
    cursor: "#6e6b5e"
  normal:
    black: "#20201d"
    red: "#d73737"
    green: "#60ac39"
    yellow: "#cfb017"
    blue: "#6684e1"
    magenta: "#b854d4"
    cyan: "#1fad83"
    white: "#a6a28c"
  bright:
    black: "#7d7a68"
    red: "#d73737"
    green: "#60ac39"
    yellow: "#cfb017"
    blue: "#6684e1"
    magenta: "#b854d4"
    cyan: "#1fad83"
    white: "#fefbec"
theme: Atelierdune.light
